{% extends "basecards.html.twig" %}

{% block title %}Card{% endblock %}

{% block body %}
    <h1>Dra kort ur kortlek</h1>

    <h3>Drar slumpmässigt kort</h3>

    <h4>Följande kort drogs: </h4>
    <div class="cardcontainer">
        {% for value in drawncard %}
            {% if (value[-1:] == '♥') or (value[-1:] == '♦') %}
                <div class="singlecardcontainerred">
            {% else %}
                <div class="singlecardcontainerblack">
            {% endif %}
                <div class="singlecardborder">
                    <div class="upperleftrank">
                        {% if value|length == 2 %}
                        {{ value|slice(0, 1) }}
                        {% else %}
                        {{ value|slice(0, 2) }}
                        {% endif %}
                    </div>
                    <div class="upperleftsuit">
                        {{ value[-1:] }}
                    </div>
                    <br>
                    <div class="lowerrightsuit">
                        {{ value[-1:] }}
                    </div>
                    <div class="lowerrightrank">
                        {% if value|length == 2 %}
                        {{ value|slice(0, 1) }}
                        {% else %}
                        {{ value|slice(0, 2) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <h4>Det finns {{ numberofcards }} kort kvar och dessa är: </h4>
    <div class="cardcontainer">
        {% for value in deckofcards %}
            {% if (value[-1:] == '♥') or (value[-1:] == '♦') %}
                <div class="singlecardcontainerred">
            {% else %}
                <div class="singlecardcontainerblack">
            {% endif %}
                <div class="singlecardborder">
                    <div class="upperleftrank">
                        {% if value|length == 2 %}
                        {{ value|slice(0, 1) }}
                        {% else %}
                        {{ value|slice(0, 2) }}
                        {% endif %}
                    </div>
                    <div class="upperleftsuit">
                        {{ value[-1:] }}
                    </div>
                    <br>
                    <div class="lowerrightsuit">
                        {{ value[-1:] }}
                    </div>
                    <div class="lowerrightrank">
                        {% if value|length == 2 %}
                        {{ value|slice(0, 1) }}
                        {% else %}
                        {{ value|slice(0, 2) }}
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}